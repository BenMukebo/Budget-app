<p style="color: green"><%= notice %></p>

<nav class="header-categories d-flex flex-center">
  <div class="icons">
    <%= link_to  category_path(@category) do %>
      <i class="fa-solid fa-right-to-bracket"></i>
    <% end %>
  </div>
  <h1>Transaction details</h1>
</nav>

<div class="transactions d-flex"> 
  <h2>ID: Transaction <%= @record.id %></h2>
  <ul class="categoies-records">
    <li id="category-record">
      <%= render @record %>

      <ul class='record d-flex flex-center'>
        <li>
          <p class="date d-flex"> <%= @record.created_at.strftime('%Y') %>
            <span>_<%= @record.created_at.to_formatted_s(:short) %></span>
          </p>
        </li>
        <li>
          <p class="date d-flex"> <%= @record.updated_at.strftime('%Y') %>
            <span>_<%= @record.updated_at.to_formatted_s(:short) %></span>
          </p>
        </li>
      </ul>
    </li>
  </ul>
</div>

<div>
  <div class="btns-record d-flex flex-center">
      <div class="back-btn">
        <%= link_to "Edit this record", edit_category_record_path(@category, @record) %>
      </div>
      <div class="delete-btn">
        <%=button_to 'Delete', {:controller => :records, :action => 'destroy', :id => @record.id}, :method => :delete%>
      </div>
  </div>
</div>